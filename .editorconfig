root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js,jsx,ts,tsx,json,css,scss,html,md}]
indent_size = 2

[*.{py}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[package.json]
indent_size = 2

[*.{png,jpg,jpeg,gif,svg,ico}]
insert_final_newline = false
trim_trailing_whitespace = false 